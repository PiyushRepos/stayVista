<% layout("./layouts/boilerplate.ejs") %>

<div class="row mt-3 d-flex flex-column justify-content-center mt-10">
  <div
    class="col-8 offset-2 col-md-6 offset-md-3 col-lg-4 offset-lg-4 border border-secondary rounded-3 py-3 px-4"
  >
    <h2 class="text-center">SignUp</h2>
    <form action="/signup" method="post" novalidate class="needs-validation">
      <div class="mb-3">
        <label class="fw-semibold" for="username" class="form-label"
          >Username</label
        >
        <input
          autocomplete="on"
          type="text"
          name="username"
          class="form-control"
          id="username"
          required
          placeholder="Username"
        />
        <div class="valid-feedback">Looks unique.</div>
        <div class="invalid-feedback">Username is required.</div>
      </div>
      <div class="mb-3">
        <label class="fw-semibold" for="email" class="form-label">Email</label>
        <input
          autocomplete="on"
          type="email"
          name="email"
          class="form-control"
          id="email"
          required
          placeholder="email@example.com"
        />
        <div class="invalid-feedback">Email is required.</div>
      </div>
      <div class="mb-3">
        <label class="fw-semibold" for="password" class="form-label"
          >Password</label
        >
        <input
          autocomplete="on"
          type="password"
          name="password"
          class="form-control"
          id="password"
          required
          placeholder="Password"
        />
        <div class="invalid-feedback">Password is required.</div>
      </div>
      <button class="btn btn-dark w-100">SignUp</button>
    </form>
    <p class="text-muted text-center mt-2">
      Already have an account?
      <a class="text-muted" href="/login">Login</a>
    </p>
  </div>
</div>
