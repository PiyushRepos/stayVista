<% layout('./layouts/boilerplate.ejs') %>
<body>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let i = 0; i < allListings.length; i++) { %>
    <a class="text-decoration-none" href="/listings/<%= allListings[i]._id %>">
      <div class="card col">
        <div class="card-image">
          <img
        loading="lazy"
        src="<%= allListings[i].image.url %>"
        class="card-img-top"
        alt="<%= allListings[i].title %>"
        />
        </div>
        <!-- <div class="card-img-overlay"></div> -->
        <div class="card-body">
          <h5 class="card-title"><%= allListings[i].title %></h5>
          <p class="card-text">
            &#x20b9; <%= allListings[i].price.toLocaleString("en-IN") %> / night
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
